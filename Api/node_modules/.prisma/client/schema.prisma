generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  email       String   @id @unique
  password    String
  firstName   String
  lastName    String
  dateOfBirth DateTime

  applications       Application[] // One-to-many relationship with Application
  performanceMetrics PerformanceMetrics[] // One-to-many relationship with PerformanceMetrics
}

model Application {
  userId       String
  jobListingId String
  status       String
  dateApplied  DateTime
  dateUpdated  DateTime?
  notes        String?

  user User @relation(fields: [userId], references: [email], onDelete: Cascade) // Updated reference to email

  @@id([userId, jobListingId]) // Composite primary key: userId and jobListingId must be unique together
}

model PerformanceMetrics {
  userId          String
  platformName    String
  totalJobsViewed Int
  jobsApplied     Int
  rejections      Int
  interviews      Int
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  user User @relation(fields: [userId], references: [email], onDelete: Cascade) // Updated reference to email

  @@id([userId, platformName]) // Composite primary key: userId and platformName must be unique together
}

model platformName {
  platformName String   @id @unique
  createdDate  DateTime
}
